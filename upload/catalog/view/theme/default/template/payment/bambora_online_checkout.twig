<h2>{{ text_instruction }}</h2>
<div class="well well-sm">
    <p>{{ text_payment }}</p>
    <div class="bambora_paymentlogos">
	{% for $paymentTypeId in {{ $bambora_online_checkout_allowed_payment_type_ids }} %}
	    <img src="https://d3r1pwhfz7unl9.cloudfront.net/paymentlogos/{{ $paymentTypeId }}.svg"/>
	{% endfor %}
    </div>
</div>
<div class="buttons">
  <div class="pull-right">
    <input type="button" value="{{ button_confirm }}" id="button-confirm" data-loading-text="{{ text_loading }}" class="btn btn-primary" />
  </div>
</div>
<script type="text/javascript">
    (function (n, t, i, r, u, f, e) { n[u] = n[u] || function() {
    (n[u].q = n[u].q || []).push(arguments)}; f = t.createElement(i);
    e = t.getElementsByTagName(i)[0]; f.async = 1; f.src = r;
	e.parentNode.insertBefore(f, e)})(window, document, "script", "https://v1.checkout.bambora.com/assets/paymentwindow-v1.min.js", "bam");
</script>
<script type="text/javascript">
    var options = {
            windowstate: {{ $bambora_online_checkout_window_state }}
        }
    $('#button-confirm').on('click', function() {
        bam("open", "{{ $bambora_online_checkout_session_url }}>", options);
    });
</script>

